  workspaceId: string
  workspaceName: string
}

export function ImpactAIWorkspace({ workspaceId, workspaceName }: ImpactAIWorkspaceProps) {
  const [generating, setGenerating] = useState(false)
  const [analysis, setAnalysis] = useState('')

  const generateAnalysis = async () => {
    setGenerating(true)
    
    // Simulate AI analysis
    setTimeout(() => {
      setAnalysis(`# ImpactAI Analysis: ${workspaceName}

## ðŸ“Š Performance Metrics
- **Team Productivity**: 92% (Excellent)
